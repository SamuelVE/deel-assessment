{
  "compilerOptions": {
    "target": "es5",                                 
    "module": "commonjs",                               
    "rootDir": "./",                                
    "baseUrl": "./",                                  
    "allowJs": true,                          
    "noEmit": true,                                   
    "isolatedModules": true,                          
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": false,                                     
    "skipDefaultLibCheck": true,                      
    "skipLibCheck": true                        
  },
  "include": ["/**/*.ts", "api-test/utils/reporter.js"],
  "exclude": ["node_modules"] 
}
