{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent" : [1, "tab"],
        "semi": [2, "always"],
        "no-undef":"off",
        "space-before-function-paren":"off",
        "no-tabs":"off",
        "n/no-path-concat":"off",
        "no-mixed-spaces-and-tabs": "off"
    }
}
